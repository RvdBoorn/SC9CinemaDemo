      <!-- Content -->
<section class="g-py-50">
    <div class="container">
        <h1 class="g-mb-20">@Html.Sitecore().Field("Title")</h1>
        <div class="row">
            <div class="col-lg-9">
                @Html.Sitecore().Field("Body")
            </div>
            <div class="col-lg-3">
                @Html.Sitecore().Field("Poster", new { @maxWidth = "250" })
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 text-center">
                <a class="btn btn-lg u-btn-darkgray g-mr-10 g-mb-15" href="#modal19" data-modal-target="#modal19" data-modal-effect="contentscale">
                    <i class="fa fa-file-movie-o g-mr-5"></i>
                    Watch Trailer
                </a>

                <a class="btn btn-lg u-btn-darkgray g-mr-10 g-mb-15" href="/reserve-ticket" >
                    <i class="fa fa-ticket g-mr-5"></i>
                    Reserve Tickets
                </a>
            </div>


            <div id="modal19" class="text-left g-max-width-840 g-bg-white g-overflow-y-auto g-pa-20" style="display: none;">
                <button type="button" class="close" onclick="Custombox.modal.close();">
                    <i class="hs-icon hs-icon-close"></i>
                </button>

                @Html.Raw(Sitecore.Context.Item["Trailer"])
            </div>

        </div>
</section>
<!-- End Content -->
