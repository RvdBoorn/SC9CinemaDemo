@model SC9Demo.Models.VisitInformation

<div id="pnlDetails">
    <h4 class="center-title">
        Visit Details
        <span class="pagecounts">
            <img src="/assets/img/page.png" alt="Pages" title="Pages Viewed" />@Model.PageCount
            <img src="/assets/img/value.png" alt="Value" title=" Engagement Value" />@Model.EngagementValue
            <i class="icon icon-repeat" title="Visits" style="font-size: 16px; font-weight:bold; color:#ff0000;padding:4px;"></i> @Model.Visits
        </span>
    </h4>
</div>


    <div id="accordion-11" class="u-accordion u-accordion-bg-primary u-accordion-color-white" role="tablist" aria-multiselectable="true">
        <!-- Card -->
        <div class="card g-brd-none rounded-0 g-mb-15">
            <div id="accordion-11-heading-01" class="u-accordion__header g-pa-0" role="tab">
                <h5 class="mb-0">
                    <a class="d-block g-color-main g-text-underline--none--hover g-brd-around g-brd-gray-light-v4 g-rounded-5 g-pa-10-15" href="#accordion-11-body-01" data-toggle="collapse" data-parent="#accordion-11" aria-expanded="true" aria-controls="accordion-11-body-01">
                        <span class="u-accordion__control-icon g-mr-10">
                            <i class="fa fa-angle-down"></i>
                            <i class="fa fa-angle-up"></i>
                        </span>
                        Pattern
                    </a>
                </h5>
            </div>
            <div id="accordion-11-body-01" class="collapse show" role="tabpanel" aria-labelledby="accordion-11-heading-01">
                <div class="u-accordion__body g-color-gray-dark-v5">
                    <div class="patternwrapper">
                        @if (Model.PatternMatches.Count == 0)
                        {
                            <div>
                                <div class="image-wrapper"><img src="/assets/img/nope.png" alt="Unknown" /></div>
                                <h4>No Match</h4>
                            </div>
                            <div style="clear: both"></div>
                        }
                        else
                        {
                            foreach (var item in Model.PatternMatches)
                            {
                                <div>
                                    <div class="image-wrapper"><img src="@item.Image" alt="@item.PatternName" width="299" /></div>
                                    <h4>@item.Profile</h4>
                                    <h5>@item.PatternName</h5>
                                </div>
                                <div style="clear: both"></div>
                            }
                        }
                    </div>  
                </div>
            </div>
        </div>
        <!-- End Card -->
        <!-- Card -->
        <div class="card g-brd-none rounded-0 g-mb-15">
            <div id="accordion-11-heading-02" class="u-accordion__header g-pa-0" role="tab">
                <h5 class="mb-0">
                    <a class="collapsed d-block g-color-main g-text-underline--none--hover g-brd-around g-brd-gray-light-v4 g-rounded-5 g-pa-10-15" href="#accordion-11-body-02" data-toggle="collapse" data-parent="#accordion-11" aria-expanded="false" aria-controls="accordion-11-body-02">
                        <span class="u-accordion__control-icon g-mr-10">
                            <i class="fa fa-angle-down"></i>
                            <i class="fa fa-angle-up"></i>
                        </span>
                        Campaign
                    </a>
                </h5>
            </div>
            <div id="accordion-11-body-02" class="collapse" role="tabpanel" aria-labelledby="accordion-11-heading-02">
                <div class="u-accordion__body g-color-gray-dark-v5">
                    @Model.Campaign
                </div>
            </div>
        </div>
        <!-- End Card -->
        <!-- Card -->
        <div class="card g-brd-none rounded-0 g-mb-15">
            <div id="accordion-11-heading-03" class="u-accordion__header g-pa-0" role="tab">
                <h5 class="mb-0">
                    <a class="collapsed d-block g-color-main g-text-underline--none--hover g-brd-around g-brd-gray-light-v4 g-rounded-5 g-pa-10-15" href="#accordion-11-body-03" data-toggle="collapse" data-parent="#accordion-11" aria-expanded="false" aria-controls="accordion-11-body-03">
                        <span class="u-accordion__control-icon g-mr-10">
                            <i class="fa fa-angle-down"></i>
                            <i class="fa fa-angle-up"></i>
                        </span>
                        Visit Information
                    </a>
                </h5>
            </div>
            <div id="accordion-11-body-03" class="collapse" role="tabpanel" aria-labelledby="accordion-11-heading-03">
                <div class="u-accordion__body g-color-gray-dark-v5">
                    <strong>Geo IP Location</strong>
                    <ul>
                        <li>@UIHelpers.GetDictionaryText("GeoIp City"): @Model.City</li>
                        <li>@UIHelpers.GetDictionaryText("GeoIp Postal Code"): @Model.PostalCode</li>
                        <li>Business: @Model.BusinessName</li>
                    </ul>
                    <strong>Device Information</strong>
                        Device: @Model.Device
                </div>
            </div>
        </div>
        <!-- End Card -->

        <!-- Card -->
        <div class="card g-brd-none rounded-0 g-mb-15">
            <div id="accordion-11-heading-04" class="u-accordion__header g-pa-0" role="tab">
                <h5 class="mb-0">
                    <a class="collapsed d-block g-color-main g-text-underline--none--hover g-brd-around g-brd-gray-light-v4 g-rounded-5 g-pa-10-15" href="#accordion-11-body-04" data-toggle="collapse" data-parent="#accordion-11" aria-expanded="false" aria-controls="accordion-11-body-04">
                        <span class="u-accordion__control-icon g-mr-10">
                            <i class="fa fa-angle-down"></i>
                            <i class="fa fa-angle-up"></i>
                        </span>
                        Goals
                    </a>
                </h5>
            </div>
            <div id="accordion-11-body-04" class="collapse" role="tabpanel" aria-labelledby="accordion-11-heading-04">
                <div class="u-accordion__body g-color-gray-dark-v5">
                    <ul>
                        @foreach (var item in Model.PageGoals())
                        {
                            <li>@item.DateT.ToString("dd MMM yy, HH:MM") - @item.GoalName (@item.Points)   </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <!-- End Card -->


    </div>
