@model RenderingModel
<!--Start  - Featured Image -->
@{
    var link = ((Sitecore.Data.Fields.LinkField)Model.Item.Fields["link to"]).GetFriendlyUrl();
}
<table border="0" cellpadding="0" cellspacing="0" width="100%">
    <tr>
    <td width="45%">
        <h2>@Html.Sitecore().Field("title", Model.Item)</h2>
        @Html.Sitecore().Field("text", Model.Item)
    </td>
        <td>
            <a href="@link" target="_blank">
                @Html.Sitecore().Field("image", Model.Item, new { @style = "display: block; max-width: 360px; border:none", @w = "360", @class = "emailwrapto100pc", @border = "0" })
            </a>
</td>
    </tr>
    <tr>
    <td height="10"></td>
    </tr>
</table>
