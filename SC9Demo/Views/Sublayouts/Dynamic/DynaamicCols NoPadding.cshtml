<section class="g-py-50">
    <div class="container">
        @{if (!string.IsNullOrEmpty(SC9Demo.Configuration.SiteUI.UIHelpers.GetPropertyValue("SectionTitle", "")))
            {
                <div class="row"><h3>@SC9Demo.Configuration.SiteUI.UIHelpers.GetPropertyValue("SectionTitle", "")</h3></div>
            }
        }
        <div class="row">
            @Html.Sitecore().DynamicPlaceholder("centre", CreateColumnWrapper, count:3, maxCount:4)
        </div>
    </div>
</section>

@functions
{
    TagBuilder CreateColumnWrapper(DynamicPlaceholderRenderContext context)
    {
        var tagBuilder = new TagBuilder("div");
        int[] widths = new int[] { 0, 12, 6, 4, 3 };

        tagBuilder.AddCssClass("col-lg-" + widths[context.PlaceholdersCount]);
        return tagBuilder;
    }
}
