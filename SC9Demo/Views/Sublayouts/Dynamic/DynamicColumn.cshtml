 @Html.Sitecore().DynamicPlaceholder("centre", CreateColumnWrapper)

@functions
{
    TagBuilder CreateColumnWrapper(DynamicPlaceholderRenderContext context)
    {
        string width = string.Empty;
        if(string.IsNullOrEmpty(context.Parameters["width"]) || context.Parameters["width"] == null)
        {
            width = "1";
        }
        else
        {
            width = context.Parameters["width"];
        }
        var tagBuilder = new TagBuilder("div");
        tagBuilder.AddCssClass("col-lg-" + width);
        return tagBuilder;
    }
}


