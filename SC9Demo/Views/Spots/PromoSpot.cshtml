@model SC9Demo.Models.PromoItem

<article>
    @Html.Sitecore().Field("Image", Model.Item, new { @class = "img-fluid w-100", @width="540", @height="354" })
    <div class="g-width-80x g-bg-white g-pos-rel g-z-index-1 g-pa-30 g-mt-minus-50 mx-auto">
        <h2 class="h5 g-color-black g-font-weight-600 mb-3">
            @Html.Sitecore().Field("Title", Model.Item)
        </h2>
        <p class="g-color-gray-dark-v4 g-line-height-1_8">@Html.Sitecore().Field("Text", Model.Item)</p>

    </div>
</article>